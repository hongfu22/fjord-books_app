<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if locale == :ja %>
      <%= link_to("EN", "#{request.url.gsub(/ja/, 'en')}") %>
    <% else %>
      <%= link_to("JA", "#{request.url.gsub(/en/, 'ja')}") %>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
