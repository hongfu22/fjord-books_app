
<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Time</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% if commentable.comments.size.zero? %>
      <td colspan="3">コメントなし</td>
    <% else %>
      <% commentable.comments.each do |comment| %>
        <tr>
          <td><%= comment.user.name %></td>
          <td><%= comment.content %></td>
          <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <% if current_user.id == comment.user_id %>
            <td><%= link_to t('views.common.edit'), edit_polymorphic_path([commentable, comment]) %></td>
            <td><%= link_to t('views.common.destroy'), polymorphic_path([commentable, comment]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

